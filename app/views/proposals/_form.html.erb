<%= simple_form_for(@proposal) do |f| %>
<% if @proposal.errors.any? %>
  <%= f.error_notification %>
  <% @proposal.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
<%end%>

  <div class="form-inputs">
    <%= f.input :p_category, label: "분류", collection: ["질문", "수리요청"], prompt: "선택해주세요.", :include_blank => false %>
    <%= f.input :p_title, label: "제목" %>
    <%= f.input :p_content, label: "내용", :as => :text%>
    <%= f.hidden_field :p_studentID, :value =>current_domitory.student_number%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
