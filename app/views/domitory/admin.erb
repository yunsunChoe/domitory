       <tr>
         <td>
           <% if croom.domitory_id != nil %>
           <%= croom.domitory.name %>
           <%else%>domitory_id is null!<%end%>
           </td>
          <td><%= croom.student_number %></td>          
          <td><%= croom.apply_date%></td>
          <% if croom.apply == 2 %>
            <td>승인완료</td>
          <% elsif croom.apply == 1 %>
            <td>승인대기</td>
          <% else %>
            <td></td>
          <% end %>
        <td><input type = submit value = "승인"><input type = hidden name = "id" value = <%= croom.id%>></td>
