<head>
  <script language="javascript">
      function writeCheck() {
          var form = document.writeform;
  
          if (form.domitory[major].value== "0")
          {
              alert("전공을 선택해주세요");
              form.domitory[major].focus();
              return;
          }
          else
              alert("회원 가입이 완료되었습니다.")
          form.submit();
      }
  </script>
</head>

<div class="container">
  <div class="row">
      <div class="col col-sm-12">
        <div class="panel">
        <div class="panel-body">
          회원 가입  <span class="glyphicon glyphicon-heart-empty"></span>
        </div>
        </div>
      </div>
  	</div>
</div>

<!-- Begin Body -->
<div class="container">
	<div class="row">
      <div class="panel">
          <h3>회원 가입</h3>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <table class="table table-striped" style="border: 1px solid #ccc;">
    <tr>
      <div class="field">
        <td><%= f.label :email %></td>
        <td><%= f.email_field :email %></td>
      </div>
    </tr>
    
    <tr>
      <div class="field">
        <td><%= f.label :password %></td>
        <% if @minimum_password_length %>
        
        <% end %>
        <td><%= f.password_field :password, autocomplete: "off" %><em>(<%= @minimum_password_length %> characters minimum)</em></td>
      </div>
    </tr>
    
    <tr>
      <div class="field">
        <td><%= f.label :password_confirmation %></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "off" %></td>
      </div>
    </tr>
    <tr>
      <div>
        <td><%= f.label :name %></td>
        <td><%= f.text_field :name, autofocus: true %></td>
